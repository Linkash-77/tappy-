{
    "manifest_version": 3,
    "name": "LinkedIn AI Commenter",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "scripting",
      "https://your-flask-api-url.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  